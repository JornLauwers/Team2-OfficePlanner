@page "/admin"

<div class="row">
    <div class="col-xl-6">
        <h3>Overview employees</h3>
        <RadzenFieldset Style="width:600px;margin-bottom: 20px; height:500px;">
            <span><RadzenIcon Icon="account_box" /><b style="font-size:30px">Employee</b></span>
            <div class="row">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Username" />
                </div>
                <div class="col-md-8">
                    <RadzenTextBox style="width: 100%;" Disabled="true" Placeholder="janjansen@avento.be" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Firstname" />
                </div>
                <div class="col-md-8">
                    <RadzenTextBox style="width: 100%;" Disabled="true" Placeholder="Jan" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Lastname" />
                </div>
                <div class="col-md-8">
                    <RadzenTextBox style="width: 100%;" Disabled="true" Placeholder="Janssen" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 align-items-center d-flex">
                    <RadzenLabel Text="Progression Reservations this week" />
                </div>
                <div class="col-md-8">
                    <RadzenProgressBar Value="75" Max="100" Style="margin-bottom: 20px" />
                </div>
            </div>
        </RadzenFieldset>
    </div>
</div>


